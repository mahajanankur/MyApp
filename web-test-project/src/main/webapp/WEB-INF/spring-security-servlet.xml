	<security:http auto-config="true">
		<security:intercept-url pattern="/**" access="ROLE_ADMIN" />
	</security:http>
	 
	<security:authentication-manager>
		<security:authentication-provider>
			<security:jdbc-user-service
				data-source-ref="dataSource"
				users-by-username-query="select user_name,password,status from users where user_name=?"
				authorities-by-username-query="select u.user_name, r.role from users u, user_role r where u.user_id = r.user_id and u.user_name =?" />
		</security:authentication-provider>
	</security:authentication-manager>
	 
